<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Beauty_Salon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Beauty_Salon.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="vh-100">
    <header class="bg-opacity-blur text-white py-3" id="navbar">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3">Beauty Salon</h1>
            <nav>
                <ul class="nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">Меню</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Товары/услуги</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="About" asp-action="Index">О нас</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Authorization" asp-action="Login">Вход/регистрация</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer" style="position: relative;">
                <section class="contact-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Свяжитесь с нами</h2>
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start">
            <!-- Контактная информация -->
            <div class="contact-info mb-4 mb-md-0">
                <h4>Контактные данные</h4>
                <ul class="list-unstyled">
                    <li class="d-flex align-items-center mb-3">
                        <i class="fa fa-map-marker-alt me-3 text-primary"></i>
                        <span>г. Москва, ул. Примерная, 15</span>
                    </li>
                    <li class="d-flex align-items-center mb-3">
                        <i class="fa fa-phone me-3 text-primary"></i>
                        <span><a href="tel:+74951234567" class="text-decoration-none">+7 (495) 123-45-67</a></span>
                    </li>
                    <li class="d-flex align-items-center">
                        <i class="fa fa-envelope me-3 text-primary"></i>
                        <span><a href="mailto:info@cosmetolit.ru" class="text-decoration-none">info@cosmetolit.ru</a></span>
                    </li>
                </ul>
            </div>
            <!-- Социальные сети -->
            <div class="social-media">
                <h4>Мы в социальных сетях</h4>
                <div class="d-flex gap-3">
                    <a href="https://facebook.com" class="d-flex justify-content-center align-items-center btn btn-outline-primary">
                        <i class="fa fa-facebook-f"></i>
                    </a>
                    <a href="https://instagram.com" class="d-flex justify-content-center align-items-center btn btn-outline-danger">
                        <i class="fa fa-instagram"></i>
                    </a>
                    <a href="https://vk.com" class="d-flex justify-content-center align-items-center btn btn-outline-info">
                        <i class="fa fa-vk"></i>
                    </a>
                    <a href="https://twitter.com" class="d-flex justify-content-center align-items-center btn btn-outline-primary">
                        <i class="fa fa-twitter"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
        <div class="container">
            &copy; 2025 - Beauty_Salon - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
